
@model AddQuestionModel;

<main id="main" class="main">
<div class="container mt-5">
    <h4 class="mb-3">Add Question</h4>
        <form>
            <!-- Question -->
            <div class="mb-3">
                <label for="questionText" class="form-label fw-bold">Question <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="questionText" rows="3" placeholder="Enter Question" asp-for="QuestionText"></textarea>
                    <span class="text-danger" asp-validation-for="QuestionText"></span>
            </div>

            <!-- Question Level -->
                <div class="mt-3">
                    <label class="form-label fw-bold">Question Level Id<span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="QuestionLevelID">
                    <option value="">Select QuestionLevelID</option>
                        @foreach (var level in ViewBag.Levellist)
                        {
                        <option value="@level.QuestionLevelId">@level.QuestionLevelName</option>
                            }
                    </select>
                    <span class="text-danger" asp-validation-for="QuestionLevelID "></span>
                </div>

            <!-- Answer Options -->
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option A <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option A" asp-for="OptionA">
                        <span class="text-danger" asp-validation-for="OptionA"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option B <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option B" asp-for="OptionB">
                        <span class="text-danger" asp-validation-for="OptionB"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option C <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option C" asp-for="OptionC">
                        <span class="text-danger" asp-validation-for="OptionC"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Option D <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Option D" asp-for="OptionD">
                        <span class="text-danger" asp-validation-for="OptionD"></span>
                </div>
            </div>

            <!-- Correct Option -->
            <div class="mt-3">
                <label for="correctOption" class="form-label fw-bold">Correct Option <span class="text-danger">*</span></label>
                    <select class="form-select" id="correctOption" asp-for="CorrectOption">
                    <option selected disabled>Select Correct Option</option>
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                </select>
                    <span class="text-danger" asp-validation-for="CorrectOption"></span>
            </div>

                <!-- Question Mark -->
                <div class="mt-3">
                    <label class="form-label fw-bold">Question Mark <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="QuestionMarks" asp-for="QuestionMarks">
                    <span class="text-danger" asp-validation-for="QuestionMarks"></span>
                </div>

             <!-- IsActive -->
            <div class="mt-3">
                    <label class="form-label fw-bold">IsActive <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="IsActive" asp-for="IsActive">
                    <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>

                <!-- UserID  -->
                    <div class="mt-3">
                        <label class="form-label fw-bold">UserID <span class="text-danger">*</span></label>
                        <select class="form-control" asp-for="UserID">
                            <option value="">Select UserId</option>
                                @foreach (var user in ViewBag.userlist)
                                {
                                <option value="@user.UserID">@user.UserName</option>
                                }
                        </select>
                        <span class="text-danger" asp-validation-for="UserID "></span>
                    </div>

                <!--  Modified Questions -->
                <div class="mb-3">
                    <label for="quizDate" class="form-label fw-bold">Modified <span class="text-danger">*</span></label>
                    <input type="date" class="form-control" id="Modified" asp-for="Modified">
                    <span class="text-danger" asp-validation-for="Modified"></span>
                </div>


            <!-- Buttons -->
            <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-success" asp-controller="Question" asp-action="QuestionInsert">Submit</button>
                <button type="reset" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>

</main>