@model AddQuizwisequestion
<main id="main" class="main">

    <div class="container mt-5">
        <h4 class="mb-3">Add QuizWiseQuestion </h4>
        <div class="card p-4 shadow-sm">
            <form>
                @* <input type="hidden" asp-for="@Model.QuizwisequestionId"></input> *@
                <div class="mb-3">
                    <label for="questionLevel" class="form-label fw-bold">Quiz Id<span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="QuizId">
                        <option value="">Select QuizId</option>
                        @foreach (var quiz in ViewBag.Quizlist)
                        {
                            <option value="@quiz.QuizId">@quiz.QuizName</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="QuizId"></span>
                </div>

                @*  Question id *@
                <div class="mb-3">
                    <label for="Userid" class="form-label fw-bold">Question Id <span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="QuestionId">
                        <option value="">Select QuestionId</option>
                        @foreach (var question in ViewBag.Questionlist)
                        {
                            <option value="@question.QuestionId">@question.QuestionName</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="QuestionId"></span>
                </div>

                @*  User id *@
                <div class="mb-3">
                    <label for="Userid" class="form-label fw-bold">User Id <span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="UserId">
                        <option value="">Select UserID</option>
                        @foreach (var user in ViewBag.Userlist)
                        {
                            <option value="@user.UserID">@user.UserName</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="UserId"></span>
                </div>

                <!--  Modified Questions -->
                <div class="mb-3">
                    <label for="quizDate" class="form-label fw-bold">Modified <span class="text-danger">*</span></label>
                    <input type="date" class="form-control" id="Modified" asp-for="Modified">
                    <span class="text-danger" asp-validation-for="Modified"></span>
                </div>



                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success" asp-controller="QuizWiseQuestion" asp-action="AddAndEdit">Save</button>
                    <button type="reset" class="btn btn-danger">Cancel</button>
                </div>
            </form>
        </div>
    </div>


</main>
